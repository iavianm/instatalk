<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row justify-content-around">
    <div class="col-4">
      <h2>Rooms</h2>

      <ul class="mt-4 list-unstyled">
        <%= render @rooms %>
      </ul>

      <div class="mt-2">
        <%= render 'rooms/form', room: @room %>
      </div>
    </div>

    <div class="online col-4">
      <h2>Users online</h2>

      <ul>
        <%= render partial: 'users/online', collection: @users_online %>
      </ul>
    </div>
  </div>
</div>
